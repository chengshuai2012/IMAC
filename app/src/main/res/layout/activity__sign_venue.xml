<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choose_bg"
    android:orientation="vertical">

    <include layout="@layout/top_layout" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/veune_sign_horizontal" />

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="40dp"
        >
    <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/weather"
    />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                >
                <ImageView
                    style="@style/ImageScale"
                    android:id="@+id/sign_first_image"
                    android:background="@drawable/pink_to_purple"
                    />
                <ImageView
                    style="@style/ImageScale"
                    android:id="@+id/sign_second_image"
                    />
                <ImageView
                    style="@style/ImageScale"
                    android:id="@+id/sign_third_image"
                    />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/WhiteScale"
                android:text="放置手指"
                android:textSize="@dimen/text_size_24sp"
                android:gravity="center"
                />
            <TextView
                style="@style/WhiteScale"
                android:text="选择会员卡"
                android:textSize="@dimen/text_size_24sp"
                android:gravity="center"
                />
            <TextView
                style="@style/WhiteScale"
                android:text="完成"
                android:textSize="@dimen/text_size_24sp"
                android:gravity="center"
                />
        </LinearLayout>
        </RelativeLayout>
        <com.link.cloud.view.NoScrollViewPager
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:background="@color/black"
            android:id="@+id/sign_viewpager"
            >

        </com.link.cloud.view.NoScrollViewPager>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_marginTop="40dp"
    android:id="@+id/sign_first_button"
    android:layout_marginBottom="60dp"
    >

<TextView
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/border_white"
    android:textSize="@dimen/text_size_34sp"
    android:textColor="@color/white"
    android:text="返回"
    android:id="@+id/sign_back"
    />
    <TextView
        android:layout_marginLeft="30dp"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/corner_change_purple"
        android:textSize="@dimen/text_size_34sp"
        android:textColor="@color/white"
        android:text="下一步60S"
        android:id="@+id/sign_next"
        />
</LinearLayout>

    </LinearLayout>
</LinearLayout>